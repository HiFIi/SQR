<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Platform.AppCompat" parent="@android:style/Theme.Material">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/maps_blue_sqr_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:colorPrimary">@color/maps_blue_sqr</item>
        <item name="android:colorPrimaryDark">@color/maps_blue_sqr_dark</item>
        <item name="android:colorAccent">@color/maps_blue_sqr</item>
        <item name="android:navigationBarColor">@android:color/black</item>      
    </style>
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/maps_blue_sqr_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:colorPrimary">@color/maps_blue_sqr</item>
        <item name="android:colorPrimaryDark">@color/maps_blue_sqr_dark</item>
        <item name="android:colorAccent">@color/maps_blue_sqr</item>
        <item name="android:navigationBarColor">@android:color/black</item>      
    </style>
</resources>
