<resources>

    <!--     </style> -->

    <style name="Theme.Material.Light" parent="@android:style/Theme.Material.Light">
        <item name="android:colorEdgeEffect">@color/colorEdgeEffect</item>
    </style>

    <!-- Notification content styles -->
    <style name="TextAppearance.StatusBar" parent="@android:style/TextAppearance.Material">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent">
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Title">
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Line2">
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Info">
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Time">
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Emphasis">
        <item name="android:textColor">#ff333333</item>
    </style>


    <!-- Notifications -->
    <style name="TextAppearance.Material.Notification"
        parent="@android:style/TextAppearance.Material">
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="TextAppearance.Material.Notification.Emphasis"
        parent="@android:style/TextAppearance.Material.Notification">
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="TextAppearance.Material.Notification.Info"
        parent="@android:style/TextAppearance.Material.Notification">
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="TextAppearance.Material.Notification.Line2"
        parent="@android:style/TextAppearance.Material.Notification">
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="TextAppearance.Material.Notification.Time"
        parent="@android:style/TextAppearance.Material.Notification">
        <item name="android:textColor">#ff555555</item>
    </style>
    <style name="TextAppearance.Material.Notification.Title"
        parent="@android:style/TextAppearance.Material.Notification">
        <item name="android:textColor">#ff555555</item>
    </style>

    <style name="Theme.Material.Light.BaseDialog" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:colorBackground">@color/dialog_bg_white</item>
	</style>

	<style name="Theme.Material.BaseDialog" parent="@android:style/Theme.Material.Dialog">
	    <item name="android:colorBackground">@color/dialog_bg_dark</item>
	</style>

	<style name="Theme.Material.Light.DarkActionBar" parent="@android:style/Theme.Material.Light">
        <item name="android:actionBarWidgetTheme">@null</item>
        <item name="android:actionBarTheme">@style/ThemeOverlay.Material.Dark.ActionBar</item>
        <item name="android:colorPrimary">@color/action_bar_color</item>
        <item name="android:colorPrimaryDark">@color/status_bar_color</item>
    </style>

	<style name="ThemeOverlay.Material.Dark.ActionBar" parent="@android:style/ThemeOverlay.Material.Dark">
    </style>

    <style name="Theme.DeviceDefault.Light.DarkActionBar" parent="@android:style/Theme.Material" />

</resources>
