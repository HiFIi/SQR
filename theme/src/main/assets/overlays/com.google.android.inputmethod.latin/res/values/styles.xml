<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="platformActivityTheme" parent="@android:style/Theme.DeviceDefault.Light">

        <item name="android:colorAccent">@color/primary_settings</item>

    </style>

    <style name="platformSettingsTheme" parent="@android:style/Theme.DeviceDefault">

        <item name="android:colorPrimary">@color/primary_settings</item>
        <item name="android:colorPrimaryDark">@color/primary_settings_dark</item>
        <item name="android:colorAccent">@color/primary_settings</item>
        <item name="android:windowBackground">@color/dialog_bg</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#E6fafafa</item>

    </style>
    <style name="platformDialogTheme" parent="@android:style/Theme.DeviceDefault.Dialog">

        <item name="android:windowBackground">@color/dialog_bg</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:colorAccent">@color/primary_settings</item>

    </style>


</resources>
