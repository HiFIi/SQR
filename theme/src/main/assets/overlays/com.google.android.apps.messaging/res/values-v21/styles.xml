<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BugleBaseTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:colorPrimary">@color/action_bar_background_color</item>
        <item name="android:colorPrimaryDark">@color/action_bar_background_color_dark</item>
        <item name="android:colorAccent">@color/action_bar_background_color</item>
        <item name="android:statusBarColor">#FF2F3233</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">#FF202225</item>
    </style>

    <style name="BugleActionBar" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:elevation">4dp</item>
    </style>

    <style name="BugleTheme.ConversationListActivity" parent="@android:style/Theme.Material.Light">
        <item name="android:windowBackground">@color/sqr_conversationlist_background</item>
        <item name="android:colorPrimary">@color/action_bar_background_color</item>
        <item name="android:colorPrimaryDark">@color/action_bar_background_color_dark</item>
        <item name="android:colorAccent">@color/action_bar_background_color</item>
        <item name="android:statusBarColor">#FF2F3233</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">#FF202225</item>
    </style>

</resources>
